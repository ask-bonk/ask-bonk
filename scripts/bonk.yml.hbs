name: Bonk

on:
  issue_comment:
    types: [created]
  pull_request_review_comment:
    types: [created]

jobs:
  bonk:
    if: |
      github.event.sender.type != 'Bot' &&
      (contains(github.event.comment.body, '{{BOT_MENTION}}') || contains(github.event.comment.body, '{{BOT_COMMAND}}'))
    runs-on: ubuntu-latest
    permissions:
      id-token: write
      contents: write
      issues: write
      pull-requests: write
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 1

      - name: Configure Git
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"

      - name: Run Bonk
        uses: elithrar/ask-bonk/github@main
        env:
          OPENCODE_API_KEY: ${{ secrets.OPENCODE_API_KEY }}
        with:
          model: "{{MODEL}}"
          mentions: "{{BOT_COMMAND}},{{BOT_MENTION}}"
